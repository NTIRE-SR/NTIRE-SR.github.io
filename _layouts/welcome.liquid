---
layout: default
---
<div class="post">
  <!-- 添加横幅图片和标题 -->
  <div class="banner-container">
    <img src="/assets/img/cvpr2025_nashville_tn.jpg" alt="NTIRE Banner" class="full-width-banner">
    <div class="banner-title">
      <h1>NTIRE 2025 Image Super-Resolution</h1>
    </div>
  </div>

  <header class="post-header">
    <h1 class="post-title">
      {% if site.title == 'blank' %}
        <span class="font-weight-bold">{{ site.first_name }}</span> {{ site.middle_name }}
        {{ site.last_name }}
      {% else %}
        {{ site.title }}
      {% endif %}
    </h1>
    <p class="desc">{{ page.subtitle }}</p>
  </header>

  <article>
    <div class="clearfix">
      <!-- 添加可点击图片 -->
      <div class="content-image">
        <a href="https://codalab.lisn.upsaclay.fr/competitions/21451">
          <img src="/assets/img/codalab-sr.png" alt="Content Image">
        </a>
      </div>

      <!-- 添加三个按钮 -->
      <div class="button-group">
        <a href="https://codalab.lisn.upsaclay.fr/competitions/21451" class="btn btn-github">GitHub</a>
        <a href="https://codalab.lisn.upsaclay.fr/competitions/21451" class="btn btn-codalab">CodaLab</a>
        <a href="https://codalab.lisn.upsaclay.fr/competitions/21451" class="btn btn-ntire">NTIRE</a>
      </div>

      {{ content }}

      <!-- 添加表格 -->
      <table class="content-table">
        <thead>
          <tr>
            <th>标题1</th>
            <th>标题2</th>
            <th>标题3</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>内容1</td>
            <td>内容2</td>
            <td>内容3</td>
          </tr>
          <!-- 可以添加更多行 -->
        </tbody>
      </table>
    </div>


    {% if site.newsletter and site.newsletter.enabled and site.footer_fixed %}
      {% include newsletter.liquid center=true %}
    {% endif %}
  </article>
</div>
